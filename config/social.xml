<?xml version="1.0" encoding="UTF-8"?>
<!-- Social Media Configuration -->
<social>
  <!-- Social Media Accounts -->
  <accounts>
    <platform>
      <name>X</name>
      <url>{{twitter_url}}</url>
      <icon>/images/x-icon.png</icon>
      <username>{{twitter_username}}</username>
      <api_key>{{twitter_api_key}}</api_key>
      <api_secret>{{twitter_api_secret}}</api_secret>
      <access_token>{{twitter_access_token}}</access_token>
      <access_secret>{{twitter_access_secret}}</access_secret>
      <bearer_token>{{twitter_bearer_token}}</bearer_token>
      <enabled>true</enabled>
    </platform>
    
    <platform>
      <name>BlueSky</name>
      <url>{{bluesky_url}}</url>
      <icon>/images/bluesky-icon.png</icon>
      <username>{{bluesky_username}}</username>
      <password>{{bluesky_password}}</password>
      <enabled>true</enabled>
    </platform>
    
